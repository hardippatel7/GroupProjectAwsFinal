@{
    ViewData["Title"] = "Login Page";
}
@model User
<section class="centerDisplay">
    <div class="container-fluid h-custom">
        <h3 class="display-4 m-4 text-center">Login</h3>
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
                <img src="~/css/book.png"
                     class="img-fluid" alt="Book image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <form method="post" action="/User/LoginVerify">
                    <!-- Username input -->

                    <div class="form-outline mb-4">
                        <input type="text" asp-for="userName" class="form-control"
                               placeholder="Enter a valid username" />
                        <label class="form-label" asp-for="userName">Username</label>
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" asp-for="password" class="form-control"
                               placeholder="Enter password" />
                        <label class="form-label" asp-for="password">Password</label>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class="small fw-bold mt-2 pt-1 mb-0">
                            Don't have an account? <a asp-area="" asp-controller="User" asp-action="Registration" class="link-danger">Register</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>

@model AdminBooksPanel.Models.Books

@{
    ViewData["Title"] = "Details";
}

<h1>Book Details</h1>

<div>
    <h4>Book (Id: @Html.DisplayFor(model => model.bookId))</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bookId)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bookId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.thumbnail)
        </dt>
        <dd class="col-sm-10">
            <img width="100px" height="170px" src="@Html.DisplayFor(model => model.thumbnail)" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bookName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bookName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bookAuthor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bookAuthor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.bookGenre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.bookGenre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            $ @Html.DisplayFor(model => model.Price)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.publishDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.publishDate)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Buy", "Buy", new { id = Model.bookId  }) |
    <a asp-action="Books">Back to Books</a>
</div>

